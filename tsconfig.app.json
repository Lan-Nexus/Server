{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": [
    "env.d.ts",
    "src/renderer/**/*",
    "src/renderer/**/*.vue",
    "src/common/**/*",
  ],
  "exclude": [
    "node_models/*",
    "src/renderer/**/__tests__/*",
  ],
  "compilerOptions": {
    "composite": true,
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./src/renderer/*"
      ]
    }
  }
}