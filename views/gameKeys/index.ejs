<h1>Game Keys for <%= game.name %></h1>
<script src="https://unpkg.com/htmx.org@1.9.10"></script>
<a href="/games/<%= game.id %>/keys/new">Add New Key</a>
<table>
  <thead>
    <tr>
      <th>ID</th>
      <th>Key</th>
      <th>IP Address</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody id="keys-table-body">
    <% keys.forEach(function(key) { %>
      <tr id="key-row-<%= key.id %>">
        <td><%= key.id %></td>
        <td><%= key.key %></td>
        <td><%= key.ipAddress %></td>
        <td>
          <a href="/games/<%= game.id %>/keys/<%= key.id %>/edit">Edit</a>
          <form action="/games/<%= game.id %>/keys/<%= key.id %>?_method=DELETE" method="POST" style="display:inline;" 
                hx-delete="/games/<%= game.id %>/keys/<%= key.id %>" 
                hx-target="#key-row-<%= key.id %>" 
                hx-swap="outerHTML remove">
            <button type="submit">Delete</button>
          </form>
        </td>
      </tr>
    <% }) %>
  </tbody>
</table>
