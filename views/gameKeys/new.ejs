<h1>Add Game Key for <%= game.name %></h1>
<script src="https://unpkg.com/htmx.org@1.9.10"></script>
<div id="new-key-form-container">
  <form id="new-key-form"
        hx-post="/games/<%= game.id %>/keys"
        hx-target="#new-key-form-container"
        hx-swap="outerHTML">
    <label>Key: <input type="text" name="key" required></label><br>
    <label>IP Address: <input type="text" name="ipAddress"></label><br>
    <input type="hidden" name="gameId" value="<%= game.id %>">
    <button type="submit">Add Key</button>
  </form>
</div>
<a href="/games/<%= game.id %>/keys">Back to Keys</a>
